<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_stock_picking_document" inherit_id="stock_foreign_trade.report_stock_picking_document">
    <xpath expr="//table[hasclass('table-condensed')]//thead//tr" position="inside">
        <th class="text-left">Net Ağırlık</th>
        <th class="text-left">Brüt Ağırlık</th>
    </xpath>
    <xpath expr="//table[hasclass('table-condensed')]//tbody//tr" position="inside">
        <td><span t-field="l.gross_weight"/></td>
        <td><span t-field="l.net_weight"/></td>        
    </xpath>
    
    <xpath expr="//table[hasclass('table-condensed')]//thead//tr//th[5]" position="replace"/>
    <xpath expr="//table[hasclass('table-condensed')]//tbody//tr//td[5]" position="replace"/>

    <xpath expr="//table[hasclass('table-condensed')]//thead//tr//th[4]" position="after">
        <th name="th_uom" class="text-start">Birim</th>
    </xpath>
    <xpath expr="//table[hasclass('table-condensed')]//tbody//tr//td[4]" position="after">
        <th name="td_uom" class="text-start"><span t-field="l.product_uom.name"/></th>
    </xpath>
</template>
</odoo>